{
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES6",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"strictNullChecks": true,
		"lib": [
			"DOM",
			"ES2017"
		],
		"types": [
			"node",
			"obsidian"
		],
		"paths": {
			"obsidian": [
				"node_modules/obsidian/obsidian.d.ts"
			]
		},
		"typeRoots": [
			"node_modules/@types",
			"node_modules"
		]
	},
	"include": [
		"**/*.ts",
		"**/*.d.ts"
	]
}

